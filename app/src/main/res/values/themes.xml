<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TravelAssistant" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dodger_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:listDivider">@android:color/transparent</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <!-- ActionBar -->
    <style name="Theme.TravelAssistant.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ActionBarStyle" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:background">@color/white</item>
        <item name="colorControlNormal">@color/dodger_blue</item>
    </style>

    <style name="Theme.TravelAssistant.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Splash Screen -->
    <style name="Theme.TravelAssistant.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
    </style>

    <style name="AppTheme.CustomSplashScreen" parent="@style/Theme.TravelAssistant">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- Layout -->
    <style name="DayNightLayout" parent="ThemeOverlay.AppCompat">
        <item name="android:background">@color/white</item>
    </style>

    <!-- Navigation View -->
    <style name="NavigationViewMenuStyle" parent="Theme.AppCompat.Light">
        <item name="itemBackground">?colorOnPrimary</item>
        <item name="itemTextColor">@color/black</item>
        <item name="background">?colorOnPrimary</item>
        <item name="colorPrimary">@color/black</item>
        <item name="colorControlHighlight">?colorPrimary</item>
    </style>
</resources>