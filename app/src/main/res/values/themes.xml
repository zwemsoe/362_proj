<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TravelAssistant" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:textAppearance">@style/GlobalTextStyle</item>
        <!-- Customize your theme here. -->
        <item name="android:listDivider">@android:color/transparent</item>
    </style>

    <style name="Theme.TravelAssistant.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TravelAssistant.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/white</item>
    </style>

    <style name="Theme.TravelAssistant.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.TravelAssistant.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
    </style>

    <style name="AppTheme.CustomSplashScreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="ActionBarStyle" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:background">@color/white</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
    </style>

    <style name="DayNightLayout" parent="ThemeOverlay.AppCompat">
        <item name="android:background">@color/white</item>
    </style>
</resources>