<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TravelAssistant" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dodger_blue</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <!-- Splash Screen -->
    <style name="Theme.TravelAssistant.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/black</item>
    </style>

    <!-- ActionBar -->
    <style name="ActionBarStyle" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:background">@color/black</item>
        <item name="colorControlNormal">@color/dodger_blue</item>
    </style>

    <!-- Layout -->
    <style name="DayNightLayout" parent="ThemeOverlay.AppCompat">
        <item name="android:background">@color/black</item>
    </style>

    <!-- Navigation View -->
    <style name="NavigationViewMenuStyle" parent="ThemeOverlay.AppCompat.Dark">
        <item name="itemBackground">?colorOnPrimary</item>
        <item name="itemTextColor">@color/white</item>
        <item name="background">?colorOnPrimary</item>
    </style>
</resources>